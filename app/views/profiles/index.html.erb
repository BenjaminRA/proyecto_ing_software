<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Perfiles</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="<%= url_for :controller => 'profiles', :action => 'index' %>">Perfiles</a>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">


<%= form_tag profiles_path, :method => 'get' do %>
<div class="ibox-content m-b-sm border-bottom">
    <div class="row">
        <div class="col-sm-4">
            <div class="form-group">
                <label class="col-form-label" for="perfil">Perfil</label>
                <%= text_field_tag :profile, params[:profile], {
                    :class => "form-control",
                    :placeholder => "Perfil"
                } %>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="form-group">
                <label class="col-form-label" for="habilidades">Habilidades</label>
                <%= select_tag 'abilities', options_for_select(@abilities.map {|ability| [ability.ability, ability.id]}), {:class => "habilidades_select form-control", :multiple => true}%>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col offset-11">
            <%= button_tag :submit, {:class => "btn btn-primary float-right"} do %>
                <i class="fa fa-search"></i>&nbsp;Buscar
            <% end %>
        </div>
    </div>
</div>
<% end %>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-content">

                <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                    <thead>
                    <tr>
                        <th data-toggle="true">Perfil</th>
                        <th data-hide="all">Descripci√≥n</th>
                        <th data-hide="all">Habilidades</th>
                        <th class="text-right" data-sort-ignore="true">Acciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @profiles.each do |profile| %>
                    <tr>
                        <td>
                            <%= profile.profile %>
                        </td>
                        <td>
                            <%= profile.description %>
                        </td>
                        <td>
                            <table class="table table-stripped" style="margin: 20px 0px;">
                                <tr>
                                    <th>Habilidad</th>
                                    <th>Valor esperado</th>
                                <tr>
                                <% profile.profile_abilities.each do |ability| %>
                                    <tr>
                                        <td><%= ability.ability.ability %></td>
                                        <td><%= ability.value %></td>
                                    </tr>
                                <% end %>
                            </table>
                        </td>
                        <td class="text-right">
                            <div class="btn-group">
                                <button class="btn-white btn btn-xs"><%= link_to "Ver", collaborators_path({id: '1'}) %></button>
                                <button class="btn-warning btn btn-xs">Editar</button>
                                <button class="btn-danger btn btn-xs">Borrar</button>
                            </div>
                        </td>
                    </tr>
                    <% end %>
                    </tbody>
                    <tfoot>
                    <tr>
                        <td colspan="6">
                            <ul class="pagination float-right"></ul>
                        </td>
                    </tr>
                    </tfoot>
                </table>

            </div>
        </div>
    </div>
</div>

</div>

<% content_for :javascript do %>

<script type="text/javascript">

// console.log('<%= @title %>')

$(function() {
    $('.footable').footable();
    $(".habilidades_select").select2({
        placeholder: "Seleccione las habilidades",
        language: {
            noResults: function (params) {
            return "No hay coincidencias";
            }
        }
    });
});

</script>

<% end %>