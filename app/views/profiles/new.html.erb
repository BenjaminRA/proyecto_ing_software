        language: {
            noResults: function (params) {
            return "No hay coincidencias";
            }
        }
    })

    $(".eliminar-competencia").on("click", (e) => {
        e.target.parentElement.parentElement.parentElement.remove()
    })

});

</script>

<% end %>
