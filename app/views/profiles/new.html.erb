$(function() {

    let select_blandas = [],
        select_tecnicas = []

    if (gon.blandas.length === 1)
        $("#add_association_blandas").hide()

    if (gon.tecnicas.length === 1)
        $("#add_association_tecnicas").hide()
    
    $("#new_profile").validate({
        rules: {
            "profile[profile]": {
                required: true,
            },

            "profile[objective]": {
                required: true,
            },

            "profile[functions]": {
                required: true,
            },
        },
        messages: {
            "profile[profile]": {
                required: "Este campo es requerido."
            },
            "profile[objective]": {
                required: "Este campo es requerido."
            },
            "profile[functions]": {
                required: "Este campo es requerido."
            },
        }
    })

    $('#add-tecnicas-association').on('cocoon:after-insert', (e, insertedItem) => {
        ability_select = insertedItem[0].firstChild.nextSibling.firstChild.nextSibling.firstChild.nextSibling.nextSibling.nextSibling
        ability_select.classList.add("form-control")
        ability_select.classList.add("habilidades_select")
        $(ability_select).select2({
            placeholder: "Seleccione las Competencias",
            language: {
                noResults: function (params) {
                return "No hay coincidencias";
                }
            }
        })
        const button = insertedItem[0].lastChild.previousSibling.firstChild.nextSibling.firstChild.nextSibling.nextSibling.nextSibling
        $(button).on("click", (e) => {
            e.target.parentElement.parentElement.parentElement.remove()
            select_tecnicas.filter(e => e !== ability_select)
            $("#add_association_tecnicas").show()
        })

        $(ability_select).on("select2:select", e => selectFilter({
            id: e.target.id,
            value: e.target.value
        }, select_tecnicas))


        if (gon.tecnicas.length <= select_tecnicas.length)
            $("#add_association_tecnicas").hide()
        else
            for (let aux of select_tecnicas)
                $(`#${ability_select.id} option[value="${aux.value}"]`).remove()

        select_tecnicas.push(ability_select)
        $(ability_select).trigger("change")
        $(ability_select).select2('open')
    })

    $('#add-blandas-association').on('cocoon:after-insert', (e, insertedItem) => {
        ability_select = insertedItem[0].firstChild.nextSibling.firstChild.nextSibling.firstChild.nextSibling.nextSibling.nextSibling
        ability_select.classList.add("form-control")
        ability_select.classList.add("habilidades_select")
        $(ability_select).select2({
            placeholder: "Seleccione las Competencias",
            language: {
                noResults: function (params) {
                return "No hay coincidencias";
                }
            }
        })
        const button = insertedItem[0].lastChild.previousSibling.firstChild.nextSibling.firstChild.nextSibling.nextSibling.nextSibling
        $(button).on("click", (e) => {
            select_blandas.filter(e => e !== ability_select)
            e.target.parentElement.parentElement.parentElement.remove()
            $("#add_association_blandas").show()
        })

        $(ability_select).on("select2:select", e => selectFilter({
            id: e.target.id,
            value: e.target.value
        }, select_blandas))

        if (gon.blandas.length <= select_blandas.length)
            $("#add_association_blandas").hide()
        else
            for (let aux of select_blandas) 
                $(`#${ability_select.id} option[value="${aux.value}"]`).remove()

        select_blandas.push(ability_select)
        $(ability_select).trigger("change")
        $(ability_select).select2('open')
    })

    // init first blandas select
    const fisrt_blanda_select = $("#fisrt_blanda_select")

