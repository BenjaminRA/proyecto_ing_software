<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Periodos</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="<%= url_for :controller => 'periods', :action => 'index' %>">Periodos</a>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
<div class="ibox-content m-b-sm border-bottom">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">

                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                        <thead>
                        <tr>
                            <th data-toggle="true">Desde</th>
                            <th data-hide="phone">Hasta</th>
                            <th class="text-right" data-sort-ignore="true">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% @periods.each do |period| %>
                        <tr>
                            <td>
                                <%= period.start_date %>
                            </td>
                            <td>
                                <%= period.finish_date %>
                            </td>
                            <td class="text-right">
                                <div class="btn-group">
                                    <%= link_to "/periods/#{period.id}", :controller => "periods", :action => "show", :method => "get" do %>
                                        <button class="btn-white btn btn-xs" style="border-radius: 0px;">Ver</button>
                                    <% end %>
                                    <%= link_to "/periods/#{period.id}/edit", :controller => "periods", :action => "edit", :method => "get" do %>
                                        <button class="btn-warning btn btn-xs" style="border-radius: 0px;">Editar</button>
                                    <% end %>
                                    <%= link_to "/periods/#{period.id}", :controller => "periods", :action => "destroy", :method => "delete" do %>
                                        <button class="btn-danger btn btn-xs" style="border-radius: 0px;">Borrar</button>
                                    <% end %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                        </tbody>
                        <tfoot>
                        <tr>
                            <td colspan="6">
                                <ul class="pagination float-right"></ul>
                            </td>
                        </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
</div>