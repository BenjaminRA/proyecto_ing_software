<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Evaluaciones</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="<%= url_for :controller => 'evaluations', :action => 'index' %>">Evaluaciónes</a>
            </li>
            <li class="breadcrumb-item">
                <strong>Evaluación</strong>
            </li>
        </ol>
    </div>
</div>

<% if(!has_been_evaluated(@evaluation.id))%>

<div class="wrapper wrapper-content animated fadeInRight">
<div class="ibox-content m-b-sm border-bottom">
    <div class="container-fluid e-b">
        <div class="row">
            <div class="col-4 p-md e-b-l e-b-t">
                <img height="120px" src="<%= image_path('logo.png') %>">
            </div>

            <div class="col-8 e-b-t e-b-r">
                <div class="row">
                    <div class="col text-center">
                        <h2><strong>Evaluación de desempeño</strong></h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <h3>Nombre: <%= @evaluation.collaborator.user.name %> <%= @evaluation.collaborator.user.last_name %></h3> <br>
                        <h3>Perfil: <%= @evaluation.collaborator.profile.profile %></h3> <br>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-8 text-center e-b-v e-b-l">
                <h3>COMPETENCIAS PROFESIONALES</h3>
            </div>

            <div class="col-4 text-center e-b-v e-b-h">
                <h3>CONOCIMIENTOS TÉCNICOS</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="row">
                    <div class="col-4 text-center p-md e-b-b e-b-h">
                        Competencia
                    </div>

                    <div class="col-8">
                        <div class="row">
                            <div class="col text-center p-h-xs e-b-b">
                                Evaluación 2019
                            </div>
                        </div>
                        <div class="row">
                            <div class="col p-xxs e-b-r e-b-b text-center">Nunca</div>
                            <div class="col p-xxs e-b-r e-b-b text-center">Rara vez</div>
                            <div class="col p-xxs e-b-r e-b-b text-center">A veces</div>
                            <div class="col p-xxs e-b-r e-b-b text-center">Casi siempre</div>
                            <div class="col p-xxs e-b-b text-center">Siempre</div>
                        </div>
                    </div>
                </div>

                <% @evaluation.collaborator.profile.abilities.each_with_index do |ability, index|%>
                    <% if ability.abilities_type_id != 1 %>
                        <div class="row e-b-b">
                            <div class="col-4 text-left p-sm e-b-r e-b-l">
                                <strong><%= ability.ability %></strong>
                            </div>

                            <div class="col-8">
                                <div class="row">
                                    <% (1..5).each do |index| %>
                                        <div class="col p-sm e-b-r text-center">
                                            <input type="radio" value="<%=index%>" name="abilities[<%=ability.id%>][value]" disabled/>
                                        </div>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
            <div class="col-4 text-center evaluation-wrapper">
                <div class="row e-b-l e-b-b">
                    <div class="col-8 text-center p-md e-b-r">
                        Competencia
                    </div>
                    <div class="col-4 text-center p-md e-b-r">
                        Evaluación 2019
                    </div>
                </div>
                
                <% @evaluation.collaborator.profile.abilities.each_with_index do |ability, index|%>
                    <% if ability.abilities_type_id != 2 %>
                        <div class="row e-b-b e-b-l">
                            <div class="col-8 text-center e-b-r" style="padding: 12px;">
                                <strong><%= ability.ability %></strong>
                            </div>
                            <input disabled class="col-4" type="number" min="0" max="5" style="padding: 13px" name="abilities[<%=ability.id%>][value]"/>
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
    <div class="container-fluid p-md">
        <div class="row">
            <div class="offset-11 col-1">
                <a href="<%= "/evaluations/#{@evaluation.id}/new" %>"><button class="float-right btn btn-w-m btn-lg btn-primary" type="submit">Llenar</button></a>
            </div>
        </div>
    </div>
</div>
</div>

<% else %>

<div class="wrapper wrapper-content animated fadeInRight">
<div class="ibox-content m-b-sm border-bottom">
    <div class="container-fluid e-b">
        <div class="row">
            <div class="col-4 p-md e-b-l e-b-t">
                <img height="120px" src="<%= image_path('logo.png') %>">
            </div>

            <div class="col-8 e-b-t e-b-r">
                <div class="row">
                    <div class="col text-center">
                        <h2><strong>Evaluación de desempeño</strong></h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <h3>Nombre: <%= @evaluation.collaborator.user.name %> <%= @evaluation.collaborator.user.last_name %></h3> <br>
                        <h3>Perfil: <%= @evaluation.collaborator.profile.profile %></h3> <br>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-8 text-center e-b-v e-b-l">
                <h3>COMPETENCIAS PROFESIONALES</h3>
            </div>

            <div class="col-4 text-center e-b-v e-b-h">
                <h3>CONOCIMIENTOS TÉCNICOS</h3>
            </div>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="row">
                    <div class="col-4 text-center p-md e-b-b e-b-h">
                        Competencia
                    </div>

                    <div class="col-8">
                        <div class="row">
                            <div class="col text-center p-h-xs e-b-b">
                                Evaluación 2019
                            </div>
                        </div>
                        <div class="row">
                            <div class="col p-xxs e-b-r e-b-b text-center">Nunca</div>
                            <div class="col p-xxs e-b-r e-b-b text-center">Rara vez</div>
                            <div class="col p-xxs e-b-r e-b-b text-center">A veces</div>
                            <div class="col p-xxs e-b-r e-b-b text-center">Casi siempre</div>
                            <div class="col p-xxs e-b-b text-center">Siempre</div>
                        </div>
                    </div>
                </div>

                <% @evaluation_abilities.each_with_index do |evaluation_abilities, index|%>
                    <% if evaluation_abilities.ability.abilities_type_id != 1 %>
                        <div class="row e-b-b">
                            <div class="col-4 text-left p-sm e-b-r e-b-l">
                                <strong><%= evaluation_abilities.ability.ability %></strong>
                            </div>

                            <div class="col-8">
                                <div class="row">
                                    <% (1..5).each do |index| %>
                                        <div class="col p-sm e-b-r text-center">
                                            <% if(index == evaluation_abilities.value) %>
                                                <input disabled type="radio" value="<%=index%>" name="abilities[<%=evaluation_abilities.ability.id%>][value]" checked/>
                                            <% else %>
                                                <input disabled type="radio" value="<%=index%>" name="abilities[<%=evaluation_abilities.ability.id%>][value]"/>
                                            <% end %>
                                        </div>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
            <div class="col-4 text-center evaluation-wrapper">
                <div class="row e-b-l e-b-b">
                    <div class="col-8 text-center p-md e-b-r">
                        Competencia
                    </div>
                    <div class="col-4 text-center p-md e-b-r">
                        Evaluación 2019
                    </div>
                </div>
                
                <% @evaluation_abilities.each_with_index do |evaluation_abilities, index|%>
                    <% if evaluation_abilities.ability.abilities_type_id != 2 %>
                        <div class="row e-b-b e-b-l">
                            <div class="col-8 text-center e-b-r" style="padding: 12px;">
                                <strong><%= evaluation_abilities.ability.ability %></strong>
                            </div>
                            <input disabled class="col-4" type="number" min="0" max="5" style="padding: 13px" value="<%=evaluation_abilities.value%>" name="abilities[<%=evaluation_abilities.ability.id%>][value]"/>
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
    <div class="container-fluid p-md">
        <div class="row">
            <div class="offset-11 col-1">
                <a href="<%= "/evaluations/#{@evaluation.id}/edit" %>"><button class="float-right btn btn-w-m btn-lg btn-primary" type="submit">Editar</button></a>
            </div>
        </div>
    </div>
</div>
</div>

<% end %>