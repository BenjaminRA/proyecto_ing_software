<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Evaluaciones</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="<%= url_for :controller => 'evaluations', :action => 'index' %>">Evaluaciones</a>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
<div class="ibox-content m-b-sm border-bottom">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">

                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                        <thead>
                        <tr>
                            <th data-toggle="true">Nombre</th>
                            <th data-hide="phone">Rut</th>
                            <th data-hide="phone">Evaluaci√≥n</th>
                            <th class="text-right" data-sort-ignore="true">Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% @evaluations.each do |evaluation| %>
                        <tr>
                            <td>
                                <%= evaluation.collaborator.user.name %> <%= evaluation.collaborator.user.last_name %>
                            </td>
                            <td>
                                <%= evaluation.collaborator.user.rut %>
                            </td>
                            <td>
                                <% if has_been_evaluated(evaluation.id) %>
                                    <span class="label label-primary">Lista</span>
                                <% else %>
                                    <span class="label label-danger">Pendiente</span>
                                <% end %>
                            </td>
                            <td class="text-right">
                                <div class="btn-group">
                                    <%= link_to "/evaluations/#{evaluation.id}", :controller => "evaluations", :action => "new", :method => "get" do %>
                                        <button class="btn-white btn btn-xs" style="border-radius: 0px;">Ver</button>
                                    <% end %>
                                    <% if has_been_evaluated(evaluation.id)%>
                                        <%= link_to "/evaluations/#{evaluation.id}/edit", :controller => "evaluations", :action => "edit", :method => "get" do %>
                                            <button class="btn-primary btn btn-xs" style="border-radius: 0px;">Editar</button>
                                        <% end %>
                                    <% else %>
                                        <%= link_to "/evaluations/#{evaluation.id}/new", :controller => "evaluations", :action => "new", :method => "get" do %>
                                            <button class="btn-primary btn btn-xs" style="border-radius: 0px;">Llenar</button>
                                        <% end %>
                                    <% end %>
                                </div>
                            </td>
                        </tr>
                        <% end %>
                        </tbody>
                        <tfoot>
                        <tr>
                            <td colspan="6">
                                <ul class="pagination float-right"></ul>
                            </td>
                        </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
</div>